@model ProductDto
<form method="post" enctype="multipart/form-data">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Update Product</h1>
        <hr />
        <input type="hidden" asp-for="@Model.ProductId" />
        <div class="row pb-2">
            <div class="col-8">
                <div>
                    <label asp-for="Name" class="p-2" style="font-size:20px;"></label>
                </div>
                <div class="col-12 pb-2">                   
                    <input asp-for="Name" class="form-control" />
                </div>
                <div class="col-2">
                    <label asp-for="Description" class="control-label p-2" style="font-size:20px;"></label>
                </div>
                <div class="col-12 pb-2">
                    <input asp-for="Description" class="form-control" />
                </div>
                <div class="col-2">
                    <label asp-for="Price" class="control-label p-2" style="font-size:20px;"></label>
                </div>
                <div class="col-12 pb-2">
                    <input asp-for="Price" class="form-control" />
                </div>
                <div class="col-2">
                    <label asp-for="Category" class="control-label p-2" style="font-size:20px;"></label>
                </div>
                <div class="col-12 pb-2">
                    <input asp-for="Category" class="form-control" />
                </div>
                <div class="col-2">
                    <label asp-for="Image" class="control-label p-2" style="font-size:20px;"></label>
                </div>
                <div class="col-12 pb-2">
                    <input asp-for="Image" class="form-control" />
                    <input asp-for="ImageUrl" hidden class="form-control" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
            </div>
            <div class="col-4 pt-5">
                <img src="@Model.ImageUrl" style="width:95%; height:50%; border-radius:10px; border:1px solid #bbb9b9" />
            </div>
        </div>
        <div class="row">
            <div class="col-8">
                <button asp-action="Update" asp-controller="Product" class="btn btn-success form-control">Update</button>
            </div>
            <div class="col-4">
                <a class="btn-primary btn form-control" asp-action="Index" asp-controller="Product">Back to List</a>
            </div>
        </div>
    </div>
</form>