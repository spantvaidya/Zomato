@model ProductDto
<form method="post">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Update Product</h1>

        <hr />
        <div class="row">
            <input type="hidden" asp-for="@Model.ProductId" />
            <div class="col-2">
                <label asp-for="Name" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Description" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Description" class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Price" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Price" class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="Category" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="Category" class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a class="btn-primary btn form-control" asp-action="Index" asp-controller="Product">Back to List</a>
            </div>
            <div class="col-5">
                <button asp-action="Update" asp-controller="Product" class="btn btn-success form-control">Update</button>
            </div>
        </div>
        <div>
        </div>
    </div>
</form>