@model CouponDto
<form method="post">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Update Coupon</h1>

        <hr />
        <div class="row">
            <input type="hidden" asp-for="@Model.CouponId" />
            <input type="hidden" asp-for="CouponCode" />
            <div class="col-2">
                <label asp-for="CouponCode" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="CouponCode" class="form-control" disabled />
            </div>
            <div class="col-2">
                <label asp-for="DiscountAmount" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="DiscountAmount" class="form-control" />
            </div>
            <div class="col-2">
                <label asp-for="MinAmount" class="control-label pt-2" style="font-size:20px;"></label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="MinAmount" class="form-control" />
            </div>

            <div class="col-5 offset-2">
                <a class="btn-primary btn form-control" asp-action="Index" asp-controller="Coupon">Back to List</a>
            </div>
            <div class="col-5">
                <button asp-action="Update" asp-controller="Coupon" class="btn btn-success form-control">Update</button>
            </div>
        </div>
        <div>
        </div>
    </div>
</form>