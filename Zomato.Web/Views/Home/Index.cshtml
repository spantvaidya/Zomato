@model IEnumerable<ProductDto>
<h1>Hello There, This is a test headng </h1>
<br />
<div class="container row">
    @foreach (var item in Model)
    {
        <div class="col-4">
            <div class="p-0 my-3 border rounded">
                <div class="card">
                    <h3 class="card-title text-white-50 text-center py-2">@item.Name</h3>
                    <img src="@item.ImageUrl" class="card-img-top">
                    <div class="card-body">
                        <div class="d-flex justify-content-between py-2">
                            <span class="text-danger" style="font-size:20px;">
                                @item.Price.ToString("c", System.Globalization.CultureInfo.GetCultureInfo("hi-IN"))
                            </span>
                            <span class="badge bg-warning text-white p-2">@item.Category</span>
                        </div>
                        <p class="card-text">@item.Description</p>
                        <div class="row">
                            <div class="col">
                                <a asp-action="ProductDetails" asp-controller="Home"
                                   asp-route-productId="@item.ProductId"
                                   class="btn btn-success form-control">Details</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

